<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-xs-12 ">
            <h2> To Do </h2>
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">{{subject}}</h3>
                </div>
                <!--beginning of for each loop -->
                <div class="panel-body">
                    <div class="testing">
                        {{#each cogs}}
                        <li class="list-group-item"> {{task}}
                            <button class="check-item btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-ok-circle"></span></button>
                            <button class="edit item btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-edit"></span></button>
                        </li>
                        {{/each}}
                    </div>
                </div>
            </div>
            <!--end of for each loop -->
            <div class="addTask" style="text-align:center">
                <!-- Trigger/Open the add task modal -->
                <button id="addBtn"> Add task </button>
                <!-- When open the add task modal -->
                <div id="addModal" class="modal">
                    <!-- open add modal content -->
                    <div class="add-modal-content">
                        <div id="closemodal" style="text-align:right">
                            <span class="glyphicon glyphicon-remove-circle"></span>
                        </div>
                        <div>
                            <form id="addFriendForm" role="form" method="get" action="/add">
                                <!--FORM Start-->
                                <h3>Add a Task</h3>
                                <div class="form-group">
                                    <label for="task">Task:</label>
                                    <input required type="text" class="form-control" id="name" placeholder="Name" name="task">
                                </div>
                                <div class="form-group">
                                    <label for="due date">Due Date:</label>
                                    <input type="text" class="flatpickr form-control" id="datepicker" placeholder="Due Date" name="dueDate">
                                </div>
                                <div class="form-group">
                                    <label for="priority">Priority: </label>
                                    <p>High, Medium, Low</p>
                                    <input type="text" class="form-control" id="priority" placeholder="Priority" name="priority">
                                </div>
                                <input type="submit" id="submitBtn" class="btn btn-default" value="Add task"></input>
                            </form>
                            <!--FORM END-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ENDS OF TO DO MODULE -->
        <!--START OF DONE TASKS MODULE -->
        <h2> Done </h2>
        <div id="donelist" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Done</h3>
            </div>
            <div class="panel-body">
                <div>
                    <!-- <li class="list-group-item" style="text-decoration: line-through" data-style="button"> Task 1 <button class= "remove-item btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-remove-sign"></span></button></li>  -->
                </div>
            </div>
        </div>
    </div>
</div>
