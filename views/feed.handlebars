<div>
    <div style="text-align:right">
        <button type="add-friend" class="btn btn-default" id="add-friend">Add Friends</button>
    </div>
    <div id="friend-modal" class="modal">
        <div class="friend-modal-content">
            <div class="close-friend-modal" id="closemodal" style="text-align:right">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div id="friend form">
                <label class="search"> Find Friends </label>
                <input required type="text" class="form-control" id="search-friend" placeholder="username" name="search-friend">
                <a href="/profile/jane">
                    <button class="btn btn-default" id="add">Search </button>
                </a>
                <div id="suggested-friends">
                    <label>People you might know</label>
                    {{#each unknown}}
                    <ul>
                        <div class="media-left">
                            <a href="/profile/{{username}}">
                                <img class="profile-avatar" src="{{profilepic}}">
                            </a>
                            <span>
                                    <a href="/profile/{{username}}">
                                        <strong>{{name}}</strong>
                                    </a>
                                    <button type="button" class="btn btn-primary friendreq" data-toggle="button" aria-pressed="false" autocomplete="off">Send Friend Request</button>
                                </span>
                        </div>
                    </ul>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<ul class="col-md-4" id="main-feed" style="float: none; margin: auto;">
    {{#each known.posts}}
    <li class="media">
        <a class="media-left waves-light" href="{{link}}">
            <img class="rounded-circle profile-avatar" src="{{profilepic}}">
        </a>
        <div class="media-body">
            <a href={{link}}><strong class="media-heading">{{name}}</strong></a>
            <p>{{text}}</p>
            <a class="btn btn-primary btn-sm like"> Like!</a>
            <span class="score">{{score}}</span> liked!
        </div>
    </li>
    {{/each}}
</ul>
