<button type="button" class="btn btn-sm btn-primary" style="text-align: right;">Add Friend</button>

<ul class="media-list">
    {{#each posts}}
    <li class="post">
        <div class="media-left">
            <a href="{{link}}">
                <img class="profile-avatar" src="{{profilepic}}">
            </a>
        </div>
        <div class="media-body">
            <strong class="media-heading">{{name}}</strong>
            <p>{{text}}</p>
        </div>
    </li>
    {{/each}}
</ul>

