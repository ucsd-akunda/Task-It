<div col-md-8>
    <div class="container">
        <h3 style="text-align:center"> Hello, John Doe </h3>
        <h6 id="lifetime" style="text-align:center">Lifetime tasks completed: {{taskData.lifecount.length}}</h6>
        <div>
            <h5>Progress: {{prog}}% of your tasks are finished!</h5>
            <progress class="progress progress-success" id="progressBar" value="{{prog}}" max="100"></progress>
        </div>
    </div>
</div>
<hr>
<div class="col-xs-12 ">
    <div id="friends" class="panel panel-default">
        <div class="panel-heading">
            <h5 class="panel-title" style="text-align: center;">Try to beat your friends!</h5>
        </div>
        <div class="panel-body">
            <div class="thumbnail">
                <a href="{{tryToBeat.link}}" style="text-align: center;">
                    <p> {{tryToBeat.name}} </p>
                    <div id="top-score">
                        <span> Beat their score of: {{tryToBeat.score}} </span>
                    </div>
                </a>
            </div>
            <div class="panel-footer">
                <div id="friend-modal" class="modal">
                    <div class="fried-modal-content">
                        <div id="closemodal" style="text-align:right">
                            <span class="glyphicon glyphicon-remove-circle"></span>
                        </div>
                        <div id="friend form">
                            <label class="search"> Find Friends </label>
                            <input required type="text" class="form-control" id="search-friend" placeholder="username" name="search-friend">
                            <button class="btn btn-default" id="add"> Add </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <!--Panel-->
    <div class="card text-xs-center">
        <div class="card-header danger-color-dark white-text" style="text-align:center">
            Upcoming
        </div>
        <div class="card-block">
            {{#each taskData.cogs}}
            <div id="all_elements">
                <div class="element">
                    <div class="task-name" style="display:inline-block">{{task}}</div>
                    <div style="text-align:right">Due:</div>
                    <div class="year" style="text-align:right">{{dueDate}}</div>
                    <button class="btn btn-info btn-sm descr">Description</button>
                    <p class="collapse">{{description}}</p>
                    <hr>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!--/.Panel-->
</div>
